# Ponos Configuration Example
# This file demonstrates how to configure Ponos for automated node operations
# Copy this file to ponos.yml and customize for your environment

version: 1

# GitHub configuration
github_token: "ghp_your_github_token_here"
github_app_id: ""
github_install_id: ""
github_pem_key: ""
github_bot_name: "ponos-bot"
github_mcp_url: "http://localhost:3001"

# Slack configuration
slack_token: "xoxb_your_slack_bot_token_here"
slack_signing_key: "your_slack_signing_secret_here"
slack_verify_token: ""
slack_channel: "sre-tasks"

# Agent Core connection
agent_core_url: "https://api.nodeoperator.ai"

# Server configuration
port: "8080"
enable_release_listener: false

# Projects configuration (replaces repo-config.yaml)
projects:
  # Ethereum consensus client example
  - network: ethereum
    project_name: eth-consensus-client
    owner: your-org
    name: ethereum-deployments
    branch: main
    paths:
      - "deployments/prysm/values.yaml"
      - "deployments/lighthouse/values.yaml"
      - "k8s/ethereum/prysm-deployment.yaml"

  # Ethereum execution client example
  - network: ethereum
    project_name: eth-execution-client
    owner: your-org
    name: ethereum-deployments
    branch: main
    paths:
      - "deployments/geth/values.yaml"
      - "deployments/nethermind/values.yaml"
      - "k8s/ethereum/geth-deployment.yaml"

  # Polkadot validator example
  - network: polkadot
    project_name: polkadot-validator
    owner: your-org
    name: polkadot-infrastructure
    branch: main
    paths:
      - "helm/polkadot/values.yaml"
      - "k8s/polkadot-deployment.yaml"
      - "docker-compose/polkadot.yml"
